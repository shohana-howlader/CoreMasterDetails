 @model List<Department>

<table id="ExpTable" class="table table-striped table-sm">
    <thead>
        <tr>
            <th>Department Name</th>
            <th>Department Budget</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <td>
                    <input type="text" class="form-control" name="Modules[@i].ModuleName" value="@Model[i].DepartmentName" />
                </td>
                <td>
                    <input type="number" class="form-control" name="Modules[@i].Duration" value="@Model[i].Budget" />
                </td>
                <td>
                    @if (i > 0)
                    {
                        <button type="button" class="btn btn-danger" onclick="DeleteItem(this)">Remove</button>
                    }

                </td>
            </tr>
        }
    </tbody>
</table>

<input type="hidden" id="hdnLastIndex" value="@Model.Count" />